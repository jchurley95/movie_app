<%= form_for @film do |f|%>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br />

    <%= f.label :genre %>
    <%= f.text_field :genre %>
    <br />

    <%= f.label :year %>
    <%= f.text_field :year %>
    <br />

    <%= f.label :synopsis %>
    <%= f.text_field :synopsis %>
    <br />

    <%= f.label :picture %>
    <%= f.text_field :picture %>
    <br />

    <%= f.submit %>
<% end %>